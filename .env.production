# 微信问卷系统 - 生产环境配置

# 核心配置
DEBUG=False
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
# 生成强随机密钥：python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-production-secret-key-change-this-to-random-string

# 数据库配置 - 生产环境使用MySQL
# 方式1: 使用DATABASE_URL（推荐）
DATABASE_URL=mysql://wechat_survey_user:your-strong-db-password@localhost:3306/wechat_survey

# 方式2: 详细的MySQL配置（当不使用DATABASE_URL时使用）
# DB_NAME=wechat_survey
# DB_USER=wechat_survey_user
# DB_PASSWORD=your-strong-db-password
# DB_HOST=localhost
# DB_PORT=3306

# 微信配置
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# SSL配置 - 生产环境建议启用SSL
USE_SSL=True
